# Makefile for 3270 interactive emulation common library

LIB3270I = lib3270i.a

RM = rm -f
CC = gcc
AR = ar

all: $(LIB3270I)

include lib3270i_files.mk
OBJS = $(LIB3270I_OBJECTS)

LIBDIR = ${exec_prefix}/lib
prefix = /usr/local
exec_prefix = ${prefix}
sysconfdir = ${prefix}/etc
datarootdir = @datrootdir@
LIBX3270DIR = ${sysconfdir}/x3270

CCOPTIONS =  -Wall -Wsign-compare -std=c99 -pedantic -Wno-variadic-macros -MMD -MP
XCPPFLAGS = -I$(THIS) -I$(THIS)/../include/unix -I$(THIS)/../include -I$(TOP)/include -DLIBX3270DIR=\"$(LIBX3270DIR)\" -D_POSIX_SOURCE -D_BSD_SOURCE -D_DEFAULT_SOURCE -D_XOPEN_SOURCE
CFLAGS = $(CCOPTIONS) $(CDEBUGFLAGS) $(XCPPFLAGS)

$(LIB3270I): $(OBJS)
	$(AR) cr $@ $(OBJS)
	ranlib $@

clean:
	$(RM) *.o

clobber: clean
	$(RM) $(LIB3270I) *.d

-include $(OBJS:.o=.d)
